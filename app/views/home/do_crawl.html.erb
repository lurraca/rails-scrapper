<%= form_tag("/do_crawl", :method =>:post, :class=>"form2") do %>
  <div class="single-site-form">
    <%= text_field_tag(:url,nil,:class=>"input-large", :id=>"single-validate") %>
    <%= submit_tag("Crawl",:class=>"btn btn-primary") %>
    <p class="help-block">Insert the site URL.</p>
  </div>
  <%= text_field_tag(:keywords,nil,:class=>"input-large", :id =>"keywords-select", :style=>"width: 290px;") %>
<% end %>

<table class="table table-bordered table-condensed">
	<thead class="table-bw">
		<tr>
			<th>URL</th>
			<th>isValid</th>
			<th>isBusiness</th>
			<th>Keywords</th>
			<th>Info1</th>
		</tr>
	</thead>
	<tr>
		<td><%= @crawler.url %></td>
		<td><%= @crawler.isActive %></td>
		<td><%= @crawler.isBusiness %></td>
		<td><%= @crawler.keywords %></td>
		<td></td>
	</tr>
</table>