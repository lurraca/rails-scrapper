<h1>Batches</h1>

<table class="table table-bordered table-condensed">
	<thead class="table-bw">
		<tr>
			<th>Batch ID</th>
			<th>Status</th>
			<th>Keywords</th>
			<th>Started Time</th>
			<th>Finish Time</th>
			<th>Total Time</th>
			<th>Total Sites Crawled</th>
		</tr>
	</thead>
	<% @batches.each do |batch| %>
	<tr>
		<td><%= batch.id %></td>
		<td><%= batch.status %></td>
		<td><%= batch.keywords %></td>
		<td><%= batch.started_time %></td>
		<td><%= batch.finish_time %></td>
		<td><%= batch.total_time unless batch.nil? %></td>
		<td><%= batch.sites.count %></td>
	</tr>
	<% end %>
</table>

